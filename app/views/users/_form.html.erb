<section class="form-group user-form">
<%= form_for @user ,html: { multipart: true } do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="field">
   <%= f.label :avatar %><br>
   <%= image_tag(@user.avatar_url) if @user.avatar? %>
   <%= f.file_field :avatar %>
   <%= f.hidden_field :avatar_cache %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name,class: "form-control", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email,class: "form-control", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :cover_photo %><br>
    <%= image_tag(@user.cover_photo) if @user.cover_photo? %>
    <%= f.file_field :cover_photo %>
  </div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-default" %>
  </div>
<% end %>
</section>
