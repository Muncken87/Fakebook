<div class="container m-top">
  <div class="four columns left-field">

    <div class="card">
      <img class="user-avatar" src="https://s3.amazonaws.com/uifaces/faces/twitter/k/128.jpg">
      <p>Alexander Munck</p>
   </div>
  </div>

  <div class="eight columns right-field">
    <%= render "posts/form" %>


  <% @posts.each do |post| %>
  <div class="card">
      <!-- <p><%= link_to 'Show', post %></p>
      <p><%= link_to 'Edit', edit_post_path(post) %></p>
      <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p> -->
      <div class="post-user-info">
        <% if user_signed_in? %>
        <%=  current_user.email %>
         <% end %>
        <small class="post-submitted"> Submitted <%= time_ago_in_words(post.created_at) %> Ago </small>
      </div>
      <div class="post-content">
        <p><%= post.content %></p>
      </div>
      <div class="post-image">
        <p>Image here</p>
        <!-- <img src="http://digitalart.io/wp-content/uploads/2014/03/Armoured-Suit-Sci-fi-Wallpaper.jpg"> -->
          <% if post.image.present? %>
  		    <p>  <%= image_tag (post.image_url) %></p>
        <% else %>
      <% end %>
      </div>
      <hr>
      <div class="comment-section">
        <a class="like" href="#">Gilla</a>
        <a class="comment" href="#">Kommentera</a>
        <a class="share" href="#">Dela</a>
      </div>
      </div> <!-- end right-field -->
  <% end %>

</div> <!-- end card -->


  <!-- <div class="sidebar">
    <p>users</p>
  </div> -->
</div>
