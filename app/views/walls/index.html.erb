      <div class="post-user-info">
        <%= image_tag post.avatar %>
        <%= post.username %>
        <small class="post-submitted"> Submitted <%= time_ago_in_words(post.created_at) %> Ago </small>
       <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "delete" %>
      </div>

      <div class="post-content">
        <p><%= post.content %></p>
      </div>
      <div class="post-image">
        <!-- <img src="http://digitalart.io/wp-content/uploads/2014/03/Armoured-Suit-Sci-fi-Wallpaper.jpg"> -->
        <% if post.image.present? %>
          <p>  <%= image_tag (post.image.slider) %></p>
        <% end %>
      </div>
      <hr>
      <div class="comment-section">
        <a class="like" href="#">Gilla</a>
        <a class="comment" href="#">Kommentera</a>
        <a class="share" href="#">Dela</a>
      </div>
      </div> <!-- end right-field -->
  <% end %>

